#:import hex kivy.utils.get_color_from_hex

<Item>

    IconLeftWidget:
        icon: root.source

<Video_Photo_Content>:
    adaptive_height: True
    orientation: 'vertical'


    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 25
        MDFillRoundFlatIconButton:
            size_hint_x: .5
            text: 'Video'
            icon: 'video'
            theme_icon_color: "Custom"
            icon_color: hex('#CDD8DC')
            pos_hint: {"center_x": .5, "center_y": .5}

        MDFillRoundFlatIconButton:
            size_hint_x: .5
            text: 'Photo'
            icon: 'image'
            theme_icon_color: "Custom"
            icon_color: hex('#CDD8DC')
            pos_hint: {"center_x": .5, "center_y": .5}
            #on_release: root.capture_img()
            on_release: root.choose_option_photo()

    MDLabel:
        id: filename_box
        text: ''
        theme_text_color: "Custom"
        text_color: hex("#8D8D8D")
        font_size: '16sp'
        bold: True
        halign: 'center'
        pos_hint: {"center_x": .5, "center_y": .5}




<Location_Content>:
    size_hint_y: None
    height: '300sp'

    padding: 5


    AnchorLayout:
        padding: 5
        anchor_x: "center"
        anchor_y: "center"

        BoxLayout:
            orientation: 'vertical'
            id: mapview_box


        AnchorLayout:
            size_hint_x: .3
            anchor_x: "center"
            anchor_y: "center"
            AsyncImage:
                size_hint_y: None
                size: ('45sp', '45sp')
                source: 'images/loc-icon.png'

        AnchorLayout:
            anchor_x: "right"
            #anchor_y: "top"
            padding: 0, 5
            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, 1
                padding: 5
                spacing: 5


                Label:
                    size_hint_y: .7
                    text: ''

                MDIconButton:
                    size_hint_y: None
                    size: ('48sp', '48sp')
                    icon: 'map-marker-plus'
                    theme_icon_color: "Custom"
                    icon_color: hex('#00CDFF')
                    on_press:
                        root.add_marker()


                MDIconButton:
                    size_hint_y: None
                    size: ('48sp', '48sp')
                    icon: 'map-marker-remove'
                    theme_icon_color: "Custom"
                    icon_color: hex('#FF0000')
                    on_press:
                        root.remove_marker()








<Details_Content>:


    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        MDTextField:
            size_hint_x: .85
            hint_text: "Add Details like place, Date & contact"
            mode: "fill"
            fill_color: 0, 0, 0, .4
            multiline: True
            pos_hint: {"center_x": .5, "center_y": .5}
            fill_color_normal: .93, .93, .93, 1
            fill_color_focus: .9, .9, .9, 1
            hint_text_color_normal: .6, .6, .6, 1
            text_color_normal: .6, .6, .6, 1



<Report_Extortion_Screen>:
    name: 'report_extortion_scr'


    canvas.before:
        Color:
            rgba: hex('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'


        BoxLayout:
            size_hint_y: .1
            orientation: 'horizontal'
            AnchorLayout: 
                size_hint_x: .15
                anchor_x: 'left'
                anchor_y: 'center'
                MDIconButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: hex('#CDD8DC')
                    on_release: root.back_clicked()

            MDLabel:
                size_hint_x: .85
                text: 'Report Extortion'
                theme_text_color: "Custom"
                text_color: hex("#8D8D8D")
                font_size: '16sp'
                bold: True


        MDScrollView:
            size_hint_y: .6
            MDGridLayout:
                id: box
                cols: 1
                adaptive_height: True



        AnchorLayout:
            size_hint_y: .2
            anchor_x: 'center'
            anchor_y: 'center'
            MDScrollView:
                size_hint: .9, .9   
                MDTextField:
                    padding: 10, 10
                    hint_text: "Add Details like place, Date & contact"
                    mode: "fill"
                    fill_color: 0, 0, 0, .4
                    multiline: True
                    pos_hint: {"center_x": .5, "center_y": .5}
                    fill_color_normal: .93, .93, .93, 1
                    fill_color_focus: .9, .9, .9, 1
                    hint_text_color_normal: .6, .6, .6, 1
                    text_color_normal: .6, .6, .6, 1



        AnchorLayout:
            size_hint_y: .1
            anchor_x: 'center'
            anchor_y: 'center'
            MDRaisedButton:
                size_hint_y: None
                height: '60dp'
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .5
                text: "Submit"
                md_bg_color: "#1D96FD"
                radius: [10, 10, 10, 10]
                on_release: root.submit_clicked()



<Camera_Popup>:
    size_hint: .95, .95
    auto_dismiss: False
    padding: 10
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        Camera:
            id: camera
            resolution: (846, 640)
            play: True

        MDFloatingActionButton:
            #text: 'Capture'
            icon: 'camera'
            #md_bg_color: hex('#CDD8DC')
            theme_icon_color: "Custom"
            icon_color: hex('#CDD8DC')
            size_hint_y: None
            height: '48dp'
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.capture_clicked()


        MDRaisedButton:
            id: btn
            text: 'Back'
            size_hint_y: None
            height: '48dp'
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.dismiss()

            
