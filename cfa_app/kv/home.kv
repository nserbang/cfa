<ContentNavigationDrawer>

    MDList:

        OneLineListItem:
            text: "Screen 1"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 1"

        OneLineListItem:
            text: "Screen 2"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 2"


<Home_Screen>:
    name: 'home_scr'


    MDTopAppBar:
        id: top
        pos_hint: {"top": 1}
        elevation: 4
        title: "Police"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]


    MDNavigationLayout:

        canvas.before:
            Color:
                rgba: hex('#FFFFFF')
            Rectangle:
                pos: self.pos
                size: self.width, self.height-top.height

        MDScreenManager:
            id: screen_manager
            size_hint_y: .9



        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            MDNavigationDrawerMenu:
                screen_manager: screen_manager
                nav_drawer: nav_drawer


                MDNavigationDrawerHeader:
                    id: header_box
                    title: "Person Name"
                    text: "Address"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerItem
                    icon: "account"
                    text: "Edit Profile"
                    on_press:
                        nav_drawer.set_state("close")
                        screen_manager.current = "edit_profile_scr"

                MDNavigationDrawerItem
                    icon: "lock"
                    text: "Change Password"
                    on_press:
                        nav_drawer.set_state("close")
                        screen_manager.current = "change_password_scr"
                        
                MDNavigationDrawerItem
                    icon: "note"
                    text: "Terms"

                MDNavigationDrawerItem
                    icon: "file-document-outline"
                    text: "Privacy Policy"

                MDNavigationDrawerItem
                    icon: "phone"
                    text: "Contact Us"

                MDNavigationDrawerItem
                    icon: "logout"
                    text: "Logout"




    MDBottomNavigation:
        size_hint_y: 0.1
        panel_color: hex("#2196F3")
        selected_color_background: "orange"
        text_color_active: "orange"
        
        MDBottomNavigationItem:
            text: "Home"
            icon: "home"
            on_tab_press: screen_manager.current = 'user_home_scr'

        MDBottomNavigationItem:
            text: "My Account"
            icon: "account"
            on_tab_press: screen_manager.current = 'user_home_scr'

        MDBottomNavigationItem:
            text: "Emergency"
            icon: "phone"
            on_tab_press: screen_manager.current = 'emergency_scr'

        MDBottomNavigationItem:
            text: "Information"
            icon: "information"
            on_tab_press: screen_manager.current = 'information_scr'

        MDBottomNavigationItem:


