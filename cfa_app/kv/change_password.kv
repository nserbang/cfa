#:import hex kivy.utils.get_color_from_hex

<Change_Password_Screen>:
    name: 'change_password_scr'


    canvas.before:
        Color:
            rgba: hex('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: 'vertical'

        AnchorLayout: 
            size_hint_y: .1
            anchor_x: 'left'
            anchor_y: 'center'
            MDIconButton:
                icon: "arrow-left"
                theme_icon_color: "Custom"
                icon_color: hex('#CDD8DC')
                on_release: root.back_clicked()

            
        GridLayout:
            cols: 1
            padding: 30
            spacing: 50

            MDLabel:
                text: 'Change Password'
                theme_text_color: "Custom"
                text_color: "#000000"
                halign: 'center'
                valign: 'middle'        
                text_size: self.size            
                markup: True
                font_style: 'H5'


            MDTextField:
                id: old_pass_box
                password: True
                size_hint_x: .7
                hint_text: "Enter Old Password"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1



            MDTextField:
                id: new_pass_box
                password: True                
                size_hint_x: .7
                hint_text: "Enter New Password"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1



            MDTextField:
                id: confirm_pass_box
                password: True
                size_hint_x: .7
                hint_text: "Confirm New Password"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1

                

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDRaisedButton:
                    size_hint_y: None
                    height: '60dp'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint_x: .7
                    text: "Change Password"
                    md_bg_color: "#1D96FD"
                    radius: [10, 10, 10, 10]
                    on_release: root.change_pass_clicked()

