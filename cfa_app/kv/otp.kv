#:import hex kivy.utils.get_color_from_hex

<Otp_Screen>:
    name: 'otp_scr'

    BoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            left_action_items: [["arrow-left", lambda x: root.back_clicked()]]
            md_bg_color: hex('#CDD8DC')
            
        GridLayout:
            cols: 1
            padding: 30
            spacing: 50

            canvas.before:
                Color:
                    rgba: hex('#CDD8DC')
                Rectangle:
                    pos: self.pos
                    size: self.size


            MDLabel:
                text: 'OTP Verification'
                theme_text_color: "Custom"
                text_color: "#000000"
                halign: 'center'
                valign: 'middle'        
                text_size: self.size            
                markup: True
                font_style: 'H4'



            MDLabel:
                text: 'Enter OTP to Verify Phone number'
                theme_text_color: "Custom"
                text_color: "#000000"
                halign: 'left'
                valign: 'middle'        
                text_size: self.size            
                markup: True
                font_style: 'H5'


            MDTextField:
                id: otp_box
                size_hint_x: .7
                hint_text: "OTP"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: 1, 1, 1, 1
                fill_color_focus: .95, .95, .95, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1

                

            MDRaisedButton:
                size_hint_y: None
                height: '60dp'
                pos_hint: {"center_x": .5, "center_y": .5}
                size_hint_x: .7
                text: "Verify"
                md_bg_color: "#1D96FD"
                radius: [10, 10, 10, 10]
                on_release: root.verify_otp_clicked()

