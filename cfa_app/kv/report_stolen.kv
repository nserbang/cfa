#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex

<Report_Stolen_Screen>:
    name: 'report_stolen_scr'


    canvas.before:
        Color:
            rgba: hex('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'


        BoxLayout:
            size_hint_y: .1
            orientation: 'horizontal'
            AnchorLayout: 
                size_hint_x: .15
                anchor_x: 'left'
                anchor_y: 'center'
                MDIconButton:
                    icon: "arrow-left"
                    theme_icon_color: "Custom"
                    icon_color: hex('#CDD8DC')
                    on_release: root.back_clicked()

            MDLabel:
                size_hint_x: .85
                text: 'Report Stolen Vehicle'
                theme_text_color: "Custom"
                text_color: hex("#8D8D8D")
                font_size: '16sp'
                bold: True


        MDBoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
                
            MDTextField:
                id: register_no_box
                size_hint_x: .7
                hint_text: "Registeration Number"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1



            MDTextField:
                id: engine_no_box
                size_hint_x: .7
                hint_text: "Engine Number"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1

            MDTextField:
                id: chasis_no_box
                size_hint_x: .7
                hint_text: "Chasis Number"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1

            MDTextField:
                id: make_box
                size_hint_x: .7
                hint_text: "Make"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1


            MDTextField:
                id: model_box
                size_hint_x: .7
                hint_text: "Model"
                mode: "fill"
                radius: [10, 10, 10, 10]
                fill_color: 0, 0, 0, .4
                multiline: False
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1


            MDTextField:
            
                size_hint_x: .85
                hint_text: "Add Details like place, Date & contact"
                size_hint_y: None
                height: "200dp"
                mode: "fill"
                fill_color: 0, 0, 0, .4
                multiline: True
                pos_hint: {"center_x": .5, "center_y": .5}
                fill_color_normal: .93, .93, .93, 1
                fill_color_focus: .9, .9, .9, 1
                hint_text_color_normal: .6, .6, .6, 1
                text_color_normal: .6, .6, .6, 1


            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                MDRaisedButton:
                    size_hint_y: None
                    height: '60dp'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    size_hint_x: .5
                    text: "Submit"
                    md_bg_color: "#1D96FD"
                    radius: [10, 10, 10, 10]
                    on_release: root.submit_clicked()


                
