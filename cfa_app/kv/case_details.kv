#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex

<Case_Details_Screen>:
    name: 'case_details_scr'
    
    padding: 5

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    
    MDBoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 10
                
        MDBoxLayout:
            size_hint_y: .3
            orientation: 'vertical'

            MDLabel:
                text: root.case_no_field
                theme_text_color: "Custom"
                text_color: hex("#000000")
                font_size: '16sp'
                bold: True
                halign: 'center'
                size: self.size
       
        
            MDLabel:
                text: root.comp_type_field
                theme_text_color: "Custom"
                text_color: hex("#8D8D8D")
                font_size: '14sp'
                
                halign: 'left'
                size: self.size

            MDLabel:
                text: root.time_field
                theme_text_color: "Custom"
                text_color: hex("#8D8D8D")
                font_size: '14sp'
                
                halign: 'left'
                size: self.size


            MDLabel:
                text: root.status_field
                theme_text_color: "Custom"
                text_color: hex("#8D8D8D")
                font_size: '14sp'
                
                halign: 'left'
                size: self.size


            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5
                adaptive_height: True
                MDIconButton:
                    icon: "map-marker-radius"

                MDBoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        text: root.station_field
                        theme_text_color: "Custom"
                        text_color: hex("#8D8D8D")
                        font_size: '14sp'
                        halign: 'left'
                        size: self.size

                    MDLabel:
                        text: root.officer_field
                        theme_text_color: "Custom"
                        text_color: hex("#8D8D8D")
                        font_size: '14sp'
                        halign: 'left'
                        size: self.size



        ScrollView:
            size_hint_y: .3
            bar_width: 6
            scroll_y: 1
            canvas.before:
                Color:
                    rgba: .95, .95, .95, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            MDLabel:
                id: paragraph_lbl
                size_hint: 1, None
                text: root.all_paragraph_field
                theme_text_color: "Custom"
                text_color: "green"
                font_size: '15sp'
                halign: 'left'
                text_size: self.size
                padding: 5,5
                size: self.texture_size

        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y: .4
            padding: 5

            FitImage:
                #source: root.case_img
                pos_hint: {"top": 1}
                radius: 15



