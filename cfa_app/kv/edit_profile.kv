#:import hex kivy.utils.get_color_from_hex

<Edit_Profile_Screen>:
    name: 'edit_profile_scr'


    canvas.before:
        Color:
            rgba: hex('#FFFFFF')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        AnchorLayout: 
            size_hint_y: .1
            anchor_x: 'left'
            anchor_y: 'center'
            MDIconButton:
                icon: "arrow-left"
                theme_icon_color: "Custom"
                icon_color: hex('#CDD8DC')
                on_release: root.back_clicked()


            
        MDBoxLayout:
            orientation: 'vertical'

            canvas.before:
                Color:
                    rgba: hex('#FFFFFF')
                Rectangle:
                    pos: self.pos
                    size: self.size


            Image:
                id: profile_img
                size_hint_y: .35
                source: 'images/logo.png'

            AnchorLayout: 
                size_hint_y: .1
                anchor_x: 'right'
                anchor_y: 'center'
                padding: 5
                MDIconButton:
                    size_hint_x: .4
                    icon: "camera-image"
                    on_release: root.choose_photo()


            MDBoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 10
                
                MDTextField:
                    id: phone_box
                    size_hint_x: .7
                    hint_text: "Enter Mobile Number"
                    mode: "fill"
                    radius: [10, 10, 10, 10]
                    fill_color: 0, 0, 0, .4
                    multiline: False
                    pos_hint: {"center_x": .5, "center_y": .5}
                    fill_color_normal: .93, .93, .93, 1
                    fill_color_focus: .9, .9, .9, 1
                    hint_text_color_normal: .6, .6, .6, 1
                    text_color_normal: .6, .6, .6, 1



                MDTextField:
                    id: name_box
                    size_hint_x: .7
                    hint_text: "Enter Name"
                    mode: "fill"
                    radius: [10, 10, 10, 10]
                    fill_color: 0, 0, 0, .4
                    multiline: False
                    pos_hint: {"center_x": .5, "center_y": .5}
                    fill_color_normal: .93, .93, .93, 1
                    fill_color_focus: .9, .9, .9, 1
                    hint_text_color_normal: .6, .6, .6, 1
                    text_color_normal: .6, .6, .6, 1
                    

                MDTextField:
                    id: address_box
                    size_hint_x: .7
                    hint_text: "Enter Address"
                    mode: "fill"
                    radius: [10, 10, 10, 10]
                    fill_color: 0, 0, 0, .4
                    multiline: False
                    pos_hint: {"center_x": .5, "center_y": .5}
                    fill_color_normal: .93, .93, .93, 1
                    fill_color_focus: .9, .9, .9, 1
                    hint_text_color_normal: .6, .6, .6, 1
                    text_color_normal: .6, .6, .6, 1



                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    MDRaisedButton:
                        size_hint_y: None
                        height: '60dp'
                        pos_hint: {"center_x": .5, "center_y": .5}
                        size_hint_x: .5
                        text: "Save Profile"
                        md_bg_color: "#1D96FD"
                        radius: [10, 10, 10, 10]
                        on_release: root.save_clicked()



