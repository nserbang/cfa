#:kivy 2.1.0
#:import hex kivy.utils.get_color_from_hex

<CallCard>:
    padding: 5
    size_hint: .85, None
    height: 100
    radius: 10
    elevation: 1

    canvas:
        Color:
            rgba: .95, .95, .95, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10]
    
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 5
        spacing: 10
        
        
        MDBoxLayout:
            size_hint_x: .5
            orientation: 'vertical'
            
            MDLabel:
                text: root.place_type_lbl
                theme_text_color: "Custom"
                text_color: hex("#000000")
                font_size: '14sp'
                halign: 'left'
                size: self.size


            MDLabel:
                text: root.phone_lbl
                theme_text_color: "Custom"
                text_color: hex("#000000")
                font_size: '14sp'
                halign: 'left'
                size: self.size
                

            MDLabel:
                text: root.km_lbl
                theme_text_color: "Custom"
                text_color: hex("#FFFFFF")
                font_size: '14sp'
                halign: 'left'
                size: self.size
                md_bg_color: hex('#2196F3')
                padding: 5, 5



        AnchorLayout:
            size_hint_x: .5
            anchor_x: 'center'
            anchor_y: 'center'
            MDFloatingActionButton:
                icon: "phone"
                icon_color: hex("#FFFFFF")

